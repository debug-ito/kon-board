name:                   kon-board
version:                0.1.0.0
author:                 Toshio Ito <debug.ito@gmail.com>
maintainer:             Toshio Ito <debug.ito@gmail.com>
license:                BSD3
license-file:           LICENSE
synopsis:               kon-board backend server
description:            kon-board backend server that manages meal recipes and calendar
category:               Web
cabal-version:          >= 1.10
build-type:             Simple
extra-source-files:     README.md, ChangeLog.md,
                        test/recipes/*.yaml,
                        test/meal-plans/*.yaml
homepage:               https://github.com/debug-ito/kon-board
bug-reports:            https://github.com/debug-ito/kon-board/issues

library
  default-language:     Haskell2010
  hs-source-dirs:       src
  ghc-options:          -Wall -fno-warn-unused-imports
  default-extensions:   OverloadedStrings, StrictData
  other-extensions:     DeriveGeneric, TemplateHaskell,
                        DataKinds, TypeOperators,
                        GADTs, GeneralizedNewtypeDeriving
  exposed-modules:      KonBoard.Recipe,
                        KonBoard.Recipe.Store,
                        KonBoard.MealPlan,
                        KonBoard.MealPlan.Store,
                        KonBoard.Bridge.MealPlan,
                        KonBoard.Bridge.Recipe,
                        KonBoard.Bridge.Util,
                        KonBoard.Bridge.Time,
                        KonBoard.Util.YAML,
                        KonBoard.Web.API,
                        KonBoard.Web.App
  -- other-modules:        
  build-depends:        base >=4.10 && <4.13,
                        text,
                        yaml,
                        aeson,
                        unordered-containers,
                        bytestring,
                        mtl,
                        time,
                        cryptohash-md5,
                        base16-bytestring,
                        safe-exceptions,
                        elm-bridge,
                        servant-server >=0.14.1 && <0.15,
                        wai-extra,
                        Glob,
                        semigroups,
                        monad-logger

executable kon-board-gen-elm
  default-language:     Haskell2010
  hs-source-dirs:       app
  main-is:              ElmGenerate.hs
  ghc-options:          -Wall -fno-warn-unused-imports -rtsopts -threaded
  -- other-modules:        
  default-extensions:   OverloadedStrings, StrictData
  -- other-extensions:     
  build-depends:        base, kon-board, elm-bridge,
                        -- servant-elm has a little heavy dependency.
                        servant-elm

flag static
  description: Static link
  default: False

executable kon-board-server
  default-language:     Haskell2010
  hs-source-dirs:       app
  main-is:              WebServer.hs
  
  ---- "-with-rtsopts=-N" has been removed because (1) Raspbian
  ---- Buster's GHC doesn't support -N RTS option (2) it seems
  ---- impossible to clear RTS options given by -with-rtsopts.
  ghc-options:          -Wall -fno-warn-unused-imports -rtsopts -threaded
  if flag(static)
    ld-options:         -static

  -- other-modules:        
  default-extensions:   OverloadedStrings, StrictData
  -- other-extensions:     
  build-depends:        base, kon-board, monad-logger, text,
                        warp

test-suite spec
  type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  hs-source-dirs:       test
  ghc-options:          -Wall -fno-warn-unused-imports "-with-rtsopts=-M512m"
  main-is:              Spec.hs
  default-extensions:   OverloadedStrings, StrictData
  -- other-extensions:     
  other-modules:        KonBoard.RecipeSpec,
                        KonBoard.Recipe.StoreSpec,
                        KonBoard.MealPlan.StoreSpec,
                        KonBoard.Util.YAMLSpec,
                        KonBoard.TestLogger
  build-depends:        base, kon-board, yaml, bytestring, text, time, monad-logger, mtl,
                        hspec

test-suite doctest
  type:                 exitcode-stdio-1.0
  default-language:     Haskell2010
  hs-source-dirs:       test
  ghc-options:          -Wall -fno-warn-unused-imports "-with-rtsopts=-M512m"
  main-is:              DocTest.hs
  default-extensions:   OverloadedStrings, StrictData
  build-depends:        base,
                        doctest >=0.13,
                        doctest-discover >=0.1.0.7

source-repository head
  type:                 git
  location:             https://github.com/debug-ito/kon-board.git
